# Database Configuration (SQLite default for dev, use PostgreSQL for production)
DATABASE_URL=sqlite:///./moderation.db
# DATABASE_URL=postgresql://username:password@localhost:5432/moderation_db

# Claude API - Required for AI moderation
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# JWT Secret - CHANGE IN PRODUCTION!
SECRET_KEY=change-this-in-production-secret-key-12345

# Snowflake DWH (READ-ONLY access)
SNOWFLAKE_USER=your_snowflake_user
SNOWFLAKE_PASSWORD=your_snowflake_password
SNOWFLAKE_ACCOUNT=your_snowflake_account
SNOWFLAKE_WAREHOUSE=DWH_V2
SNOWFLAKE_ROLE=ACCOUNTADMIN

# Optional: Override defaults
# ACCESS_TOKEN_EXPIRE_MINUTES=480
